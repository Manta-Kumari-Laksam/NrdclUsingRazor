@page "{id:min(1)?}"
@model NRDCLRazor.Pages.Customers.EditModel
@{
    var pageheader = Convert.ToInt32(Model.customer.Id) > 0 ? "Edit" : "Create";
}
<h1>@pageheader</h1>

<form method="Post" class="mt-3">
    <input hidden asp-for="customer.Id" />
    <div class="form-group row">
        <label asp-for="customer.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="customer.Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="customer.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="customer.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="customer.Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="customer.Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="customer.Mobile" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="customer.Mobile" class="form-control" placeholder="Mobile" />
        </div>
    </div>
    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Save</button> &nbsp; &nbsp;
        <a asp-page="/Customers/Index" class="btn btn-primary">Cancel</a>
    </div>
    @section Scripts{ 
    <partial name="_ValidationScriptsPartial"/>
    }
</form>