@page
@model NRDCLRazor.Pages.Customers.IndexModel
@{
}

<h1>Customer Page</h1>
<form method="get">
    <div class="input-group">
        <input class="form-control" asp-for="SearchTerm"/>
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<br />
<div class="row">
    @foreach (var customer in Model.customers)
    {
        <div class="col-md-6">
            <p>Customer Citizenship: @customer.Id</p>
            <p>Customer Name: @customer.Name</p>
            <p>Customer Email: @customer.Email</p>
            <p>Mobile Number: @customer.Mobile</p>
        </div>
        <div class="col-md-6">
            <a asp-page="/Customers/Details" asp-route-id="@customer.Id" class="btn btn-success">View</a>
            <a asp-page="/Customers/Edit" asp-route-id="@customer.Id" class="btn btn-primary">Edit</a>
            <a asp-page="/Customers/Delete" asp-route-id="@customer.Id" class="btn btn-danger">Delete</a>
        </div>
        <br /><br /><br /><br /><br /><br /><br /><br />
    }
</div>